<?xml version="1.0"?>
<launch>
    <!-- Spawn Drone in world -->
    
    <!-- vehicle init pose -->
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.7"/>
    <arg name="R" default="0"/>
    <arg name="P" default="0"/>
    <arg name="Y" default="0"/>
    <arg name="vehicle" default="iris"/>
    <arg name="sdf" default="$(find px4)/Tools/sitl_gazebo/models/$(arg vehicle)/$(arg vehicle).sdf"/>
  
    <!-- Drone model spawning -->
    <node name="$(anon vehicle_spawn)" pkg="gazebo_ros" type="spawn_model" output="log" args="-sdf -file $(arg sdf) -model $(arg vehicle) -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg R) -P $(arg P) -Y $(arg Y)"/>
</launch>
